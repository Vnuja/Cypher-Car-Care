<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <!-- Header Image -->
    <View
        android:id="@+id/image_3"
        android:layout_width="413dp"
        android:layout_height="66dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="-2dp"
        android:background="@drawable/image_3" />

    <EditText
        android:id="@+id/phone_number_input"
        android:layout_width="319dp"
        android:layout_height="42dp"
        android:background="@drawable/form_background"
        android:text="  Phone Number"
        android:textColor="@color/textColorPrimary"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="320dp" />

    <EditText
        android:id="@+id/vehicle_reg_input"
        android:layout_width="317dp"
        android:layout_height="42dp"
        android:text="  Vehicle Reg No."
        android:background="@drawable/form_background"
        android:textColor="@color/textColorPrimary"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="380dp" />

    <TextView
        android:id="@+id/button2"
        android:layout_width="122dp"
        android:layout_height="42dp"
        android:background="@drawable/button_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_3"
        app:layout_constraintVertical_bias="0.655" />

    <TextView
        android:id="@+id/button3"
        android:layout_width="209dp"
        android:layout_height="44dp"
        android:background="@drawable/button_background"
        android:textColor="@color/black"
        android:textSize="16"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/phone_number_input"
        app:layout_constraintVertical_bias="0.955" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="153dp"
        android:layout_height="67dp"
        android:src="@drawable/carrier"
        tools:layout_editor_absoluteX="-29dp"
        tools:layout_editor_absoluteY="660dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="140dp"
        android:layout_height="42dp"
        android:background="transparent"
        android:text="Send OTP"
        android:textColor="@color/black"
        android:textSize="16"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="452dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="198dp"
        android:layout_height="38dp"
        android:background="transparent"
        android:text="24/7 Emergency"
        android:textColor="@color/black"
        android:textSize="16"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="671dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
